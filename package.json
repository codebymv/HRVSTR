{
  "name": "hrvstr",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\" --names \"frontend,backend\" --prefix-colors \"cyan,yellow\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "prebuild": "echo 'Preparing build...' && ls -la !docs/ || dir \"!docs\\\" || echo 'Docs folder check complete'",
    "build": "npm run build:frontend && npm run build:backend",
    "postbuild": "cp -r !docs backend/docs || xcopy /E /I \"!docs\" \"backend\\docs\" || echo 'Docs copy completed'",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "cd backend && npm start",
    "lint": "eslint .",
    "test": "npm run test:frontend",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test",
    "test:watch": "cd frontend && npm run test:watch",
    "test:ui": "cd frontend && npm run test:ui",
    "coverage": "cd frontend && npm run coverage"
  },
  "dependencies": {
    "@auth0/auth0-react": "^2.3.0",
    "cheerio": "^1.0.0",
    "vader-sentiment": "^1.1.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "eslint": "^9.9.1",
    "typescript": "^5.5.3"
  }
}
