{
  "name": "hrvstr-backend",
  "version": "1.0.0",
  "description": "Backend server for HRVSTR application",
  "main": "src/index.js",
  "scripts": {
    "prebuild": "cp -r ../!docs ./docs || xcopy /E /I \"..\\!docs\" \"docs\" 2>nul || echo 'Failed to copy docs folder'",
    "build": "echo 'Backend build complete' && npm run copy-docs",
    "copy-docs": "cp -r ../!docs ./docs || xcopy /E /I \"..\\!docs\" \"docs\" 2>nul || mkdir -p docs",
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cache": "^5.1.2",
    "pg": "^8.16.0",
    "sentiment": "^5.0.2",
    "xml2js": "^0.6.2",
    "yahoo-finance2": "^2.13.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.23",
    "@types/pg": "^8.15.2",
    "jest": "^29.5.0",
    "nock": "^14.0.4",
    "node-fetch": "^2.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
